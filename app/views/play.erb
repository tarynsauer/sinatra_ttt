<h1>Play.....</h1>
<p>Player one: <%= @player_one.player_type %> (<%= @player_one.marker %>)</p>
<p>Player two: <%= @player_two.player_type %> (<%= @player_two.marker %>)</p>
<p id="message">:: <%= @message %> ::</p>
<form action ="/" method = "GET">
  <button>Restart Game</button>
</form>
<div id="board">
  <form action ="/move" method = "POST">
    <% if @board.game_over? %>
      <%= @board.print_inactive_board %>
    <% else %>
      <%= @board.print_active_board %>
    <% end %>
  </form>
</div>